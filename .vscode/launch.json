{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug server-side (BE + API)",
      "type": "node-terminal",
      "request": "launch",
      "command": "NODE_OPTIONS='--inspect' npm run dev",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "openExternally"
      },
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Next.js: debug con Chrome (full stack)",
      "type": "node-terminal",
      "request": "launch",
      "command": "NODE_OPTIONS='--inspect' npm run dev",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      },
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
